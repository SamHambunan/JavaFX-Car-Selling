<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.carselling.controllers.LoginController">
   <center>
      <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f5f5f5;" maxWidth="500.0" maxHeight="600.0">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
         <children>
            <Label text="Car Selling App" textFill="#2c3e50">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
            </Label>
            <Label text="Login" textFill="#34495e">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               
               <Label text="Username or Email:" />
               <TextField fx:id="usernameField" promptText="Enter username or email" />
               
               <Label text="Password:" />
               <PasswordField fx:id="passwordField" promptText="Enter password" />
               
               <Label fx:id="errorLabel" textFill="#e74c3c" visible="false" wrapText="true" />
               
               <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" text="Login" maxWidth="Infinity" prefWidth="200.0" minWidth="200.0" prefHeight="35.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
               </Button>
               
               <Separator />
               
               <Label text="Don't have an account?" />
               <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegister" text="Register" disable="false" maxWidth="Infinity" prefWidth="200.0" minWidth="200.0" prefHeight="35.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
               </Button>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>

