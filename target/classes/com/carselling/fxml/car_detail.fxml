<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.carselling.controllers.CarDetailController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" text="â† Back" style="-fx-background-color: #34495e; -fx-text-fill: white;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="editButton" mnemonicParsing="false" onAction="#handleEdit" text="Edit" style="-fx-background-color: #f39c12; -fx-text-fill: white;" visible="false" />
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDelete" text="Delete" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" visible="false" />
            <Button fx:id="addToWatchlistButton" mnemonicParsing="false" onAction="#handleAddToWatchlist" text="Add to Watchlist" style="-fx-background-color: #3498db; -fx-text-fill: white;" visible="false" />
            <Button fx:id="removeFromWatchlistButton" mnemonicParsing="false" onAction="#handleRemoveFromWatchlist" text="Remove from Watchlist" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" visible="false" />
         </children>
      </HBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
         <VBox spacing="20.0" style="-fx-background-color: #f5f5f5; -fx-padding: 30;">
            <padding>
               <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
               <HBox spacing="30.0" HBox.hgrow="ALWAYS">
                  <children>
                     <ImageView fx:id="carImageView" fitHeight="400.0" fitWidth="600.0" preserveRatio="true" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 1;">
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                     </ImageView>
                     <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;" HBox.hgrow="ALWAYS" minWidth="300.0">
                        <padding>
                           <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>
                        <children>
                           <Label fx:id="carTitleLabel" textFill="#2c3e50">
                              <font>
                                 <Font name="System Bold" size="28.0" />
                              </font>
                           </Label>
                           <Label fx:id="carPriceLabel" textFill="#27ae60">
                              <font>
                                 <Font name="System Bold" size="24.0" />
                              </font>
                           </Label>
                           
                           <Separator />
                           
                           <GridPane hgap="15.0" vgap="10.0">
                              <columnConstraints>
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" />
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" />
                              </columnConstraints>
                              <rowConstraints>
                                 <RowConstraints minHeight="25.0" vgrow="SOMETIMES" />
                                 <RowConstraints minHeight="25.0" vgrow="SOMETIMES" />
                                 <RowConstraints minHeight="25.0" vgrow="SOMETIMES" />
                                 <RowConstraints minHeight="25.0" vgrow="SOMETIMES" />
                                 <RowConstraints minHeight="25.0" vgrow="SOMETIMES" />
                              </rowConstraints>
                              <children>
                                 <Label text="Brand:" textFill="#7f8c8d" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                 <Label fx:id="brandLabel" textFill="#2c3e50" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                 
                                 <Label text="Model:" textFill="#7f8c8d" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                 <Label fx:id="modelLabel" textFill="#2c3e50" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                 
                                 <Label text="Year:" textFill="#7f8c8d" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                 <Label fx:id="yearLabel" textFill="#2c3e50" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                 
                                 <Label text="Mileage:" textFill="#7f8c8d" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                 <Label fx:id="mileageLabel" textFill="#2c3e50" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                 
                                 <Label text="Color:" textFill="#7f8c8d" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                 <Label fx:id="colorLabel" textFill="#2c3e50" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                              </children>
                           </GridPane>
                        </children>
                     </VBox>
                  </children>
               </HBox>
               
               <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
                  <padding>
                     <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                  </padding>
                  <children>
                     <Label text="Description" textFill="#2c3e50">
                        <font>
                           <Font name="System Bold" size="18.0" />
                        </font>
                     </Label>
                     <Label fx:id="descriptionLabel" textFill="#34495e" wrapText="true" />
                  </children>
               </VBox>
            </children>
         </VBox>
      </ScrollPane>
   </center>
</BorderPane>

