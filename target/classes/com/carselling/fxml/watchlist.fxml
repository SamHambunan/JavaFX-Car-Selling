<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.carselling.controllers.WatchlistController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" text="â† Back" style="-fx-background-color: #34495e; -fx-text-fill: white;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="My Watchlist" textFill="white">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
         <VBox fx:id="watchlistContainer" spacing="20.0" style="-fx-background-color: #f5f5f5; -fx-padding: 20;">
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
               <Label fx:id="emptyLabel" text="Your watchlist is empty." textFill="#7f8c8d" visible="false">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Label>
            </children>
         </VBox>
      </ScrollPane>
   </center>
</BorderPane>

